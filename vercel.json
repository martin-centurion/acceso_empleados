{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/api/[...path].js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "client/dist/**"
      }
    }
  ],
  "routes": [
    { "src": "/api(?:/(.*))?", "dest": "server/api/[...path].js" },
    { "src": "/(.*)", "dest": "server/api/[...path].js" }
  ]
}
